<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/video_filter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신순"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/video_arrow_down_iv"
        app:layout_constraintBottom_toTopOf="@+id/video_mv_sv"/>

    <ImageView
        android:id="@+id/video_arrow_down_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/video_filter_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/video_mv_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/video_filter_tv"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/video_mv_exp1_iv"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"
                android:background="@drawable/btn_img_round"
                android:src="@drawable/img_video_exp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="[MV] 라일락 (LILAC)"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_500"
                android:text="아이유 (IU) | 2021.03.26"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/video_mv_exp2_iv"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"
                android:background="@drawable/btn_img_round"
                android:src="@drawable/img_video_exp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="[MV] 라일락 (LILAC)"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_500"
                android:text="아이유 (IU) | 2021.03.26"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/video_mv_exp3_iv"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp"
                android:background="@drawable/btn_img_round"
                android:src="@drawable/img_video_exp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="[MV] 라일락 (LILAC)"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_500"
                android:text="아이유 (IU) | 2021.03.26"
                android:textSize="13sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>